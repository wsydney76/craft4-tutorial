{% from '_macros/lib.twig' import img %}

{% set image = block.image.one %}

{% if image %}
    <figure>

        {{ img(image, {
            transform: {width: 748, height: 450}
        }) }}

        {% if block.caption %}
            <figcaption>
                {{ block.caption }}
            </figcaption>
        {% endif %}
    </figure>
{% endif %}