{# The post index #}

{# @param entry Entry #}

{% extends "_layouts/main.twig" %}

{# Use the featured image of the newest post also for the index page #}
{% set latestPost = craft.entries.section('post').one %}

{# Use wide layout #}
{% do _globals.set({
    featuredImage: latestPost ? latestPost.featuredImage.one : null,
    mainWidth: 'xl'
}) %}

{% block content %}

    {{ parent() }}
    
    {% include '_partials/entries-cards.twig' with {
        query: craft.entries.section('post')
    } only %}

{% endblock %}
