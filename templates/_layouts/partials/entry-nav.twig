{# The prev/next navigation #}

{# @param entry Entry #}
{# @param condition object Filter and sort condition that determines next/prev entry #}

{# Params: entry, nav condition #}
<nav class="mt-24 flex justify-between space-x-4 rtl:space-x-reverse">
    <div>
        {% set prev = entry.prev(condition) %}
        {% if prev %}
            &lt; <a href="{{ prev.url }}">{{ prev.title|truncate(35) }}</a>
        {% endif %}
    </div>
    <div class="text-right">
        {% set next = entry.next(condition) %}
        {% if next %}
            <a href="{{ next.url }}">{{ next.title|truncate(35) }}</a> &gt;
        {% endif %}
    </div>
</nav>
