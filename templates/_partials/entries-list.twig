{# Show a simple list of entries #}

{# @param query EntryQuery #}
{# @param heading ?string #}

<section class="mt-8 prose prose-slate">

    {% set entries = query.all %}

    {% if entries %}

        {% if heading is defined %}
            <h2>{{ heading }}</h2>
        {% endif %}

        <ul>
            {% for entry in entries %}
                <li>{{ entry.link }}</li>
            {% endfor %}
        </ul>

    {% endif %}

</section>