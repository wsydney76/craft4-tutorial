{% extends "_layouts/main.twig" %}

{% set latestPost = craft.entries.section('post').one %}
{% if latestPost %}
    {% set featuredImage = latestPost.featuredImage.one %}
{% endif %}

{% block title %}{% endblock %}

{% block content %}

    {{ parent() }}

    {% cache %}
        {% include '_partials/entries-list.twig' with {
            heading: 'New Posts'|t,
            query: craft.entries
                .section('post')
                .limit(5)
                .orderBy('postDate desc')
        } only %}
    {% endcache %}

{% endblock %}
