{% apply spaceless %}
    {# Needed in multiple places, so load in advance #}
	{% set localizedEntries = entry.localized.all %}

    {# let templates overwrite title #}
    {% set title = title ?? entry.title %}

    {# let templates overwrite featured image, use global images by default #}
    {% set featuredImage = featuredImage ?? entry.featuredImage.one ?? siteInfo.featuredImage.one %}
{% endapply %}
<!DOCTYPE html>
<html lang="{{ craft.app.language }}" style="overflow-y: scroll">
<head>
    {% include '_layouts/partials/head.twig' with {
    	entry,
        title,
        localizedEntries
    } only %}
</head>

<body class="bg-gray-50 text-prose max-w-screen-md mx-auto px-4">

{# let screen reader users skip page heading #}
<a href="#content" class="sr-only focus:not-sr-only">{{ 'Jump to content'|t }}</a>

<header class="mb-8">

    {% include '_layouts/partials/nav.twig' with {
        localizedEntries
    } only %}

    {% block featured %}
        {% if featuredImage %}
            {% include '_layouts/partials/featuredImage.twig' with {
                image: featuredImage
            } only %}
        {% endif %}
    {% endblock %}

</header>

<main id="content" class="mt-8">
    {% block title %}
        <h1 class="font-bold text-3xl">{{ title }}</h1>
    {% endblock %}

    {% block content %}
        {% if entry.bodyContent %}
            {% include '_partials/blocks.twig' with {
            	query: entry.bodyContent
            } only %}
        {% endif %}
    {% endblock %}
</main>

<footer class="mt-8 border-t border-gray-400 py-4 flex justify-between">
    <div>
        &copy; {{ now|date('Y') }} {{ siteInfo.copyright }}
    </div>
    <div>
        <a class="text-sm text-gray-500" href="{{ entry.cpEditUrl }}">{{ 'Edit'|t }}</a>
    </div>
</footer>

</body>
</html>